<h1>Show</h1>
<div>
	<% unless @image.nil? %>
		<% @image.each do |image| %>
		<%= image_tag image.avatar.url %>		
		<% end %>	
	<% end %>
	<%= will_paginate @image  %>
</div>
<div>
	<strong>User : </strong>
	<%= @post.user.user_name %>
</div><br>
<div>
	<strong>Caption :</strong>
	<%= @post.caption %>
</div><br>


<!-- create-comment -->
<%= form_with model: @comments , url: create_comment_posts_path, method: :post do |form| %>
	<div>
		<%= form.label :feedback %>
		<%= form.text_field :feedback %>
	</div>
	<%= form.hidden_field :post_id, value: @post.id %>
	<div>
		<%= form.submit "create comment" %>
	</div>
<% end %>

<h2>Comments</h2>
<div id = "comment_lists" >
	<%= render "comment" %>
</div>



<%= link_to "Back" , posts_path %>

